rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() {
      return request.auth != null;
    }

    function isTeacher() {
      return isSignedIn() && request.auth.token.role == "teacher";
    }

    match /lesson_assets/{lessonId}/{fileName=**} {
      allow read: if true;
      allow write: if isTeacher();
    }

    match /csv_uploads/{fileName=**} {
      allow read, write: if isTeacher();
    }

    match /public_resources/{fileName=**} {
      allow read: if true;
      allow write: if isTeacher();
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
